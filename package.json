{
    "name": "mental-health-chatbot",
    "version": "1.0.0",
    "description": "AI-powered mental health crisis detection chatbot - Production Monorepo",
    "private": true,
    "workspaces": [
        "frontend",
        "backend",
        "ml-service",
        "shared"
    ],
    "scripts": {
        "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:ml",
        "install:frontend": "cd frontend && npm install",
        "install:backend": "cd backend && npm install",
        "install:ml": "cd ml-service && pip install -r requirements.txt",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:ml\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run dev",
        "dev:ml": "cd ml-service && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build",
        "test": "npm run test:frontend && npm run test:backend",
        "lint": "npm run lint:frontend && npm run lint:backend",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.45.0",
        "prettier": "^3.0.0",
        "typescript": "^5.1.6"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "redis": "^5.10.0"
    }
}
